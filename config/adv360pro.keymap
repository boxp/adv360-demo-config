        zmk,matrix_transform = &urobs_transform;
    };

    keymap {
        compatible = "zmk,keymap";

        base_layer {
            bindings = <
                &kp EQUAL &kp N1    &kp N2    &kp N3    &kp N4    &kp N5    &kp GRAVE      &kp GRAVE &kp N6    &kp N7    &kp N8    &kp N9    &kp N0    &kp MINUS
